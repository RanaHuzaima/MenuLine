datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Restaurant {
  id       Int     @id @default(autoincrement())
  name     String
  address  String
  phone    String
  hours    Json
  menu     Menu[]
  faqs     Faq[]
}

model Menu {
  id            Int     @id @default(autoincrement())
  restaurantId  Int
  name          String
  price         Float
  category      String
  available     Boolean
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id])
}

model Faq {
  id            Int     @id @default(autoincrement())
  restaurantId  Int
  question      String
  answer        String
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id])
}